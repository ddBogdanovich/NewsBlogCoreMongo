@model NewsBlogCoreMongo.ViewModels.NewsItemViewModel

@{

    var resizedBody = @Model.newsItem.Body.Split(' ').Take(150);
    Model.newsItem.Body = string.Join(" ", resizedBody);
}


<h3 style="color: crimson">Are you sure you want to delete this?</h3>
<div>

    <table class="table table-bordered table-condensed table-hover brd">

        <tr>

            <td>
                <span style="font-weight: bolder"> @Html.DisplayFor(modelItem => @Model.newsItem.Headline)</span>
                <hr>
                @Model.newsItem.Body;
                <hr>

                <image-link model="@Model" style-attribute="width: 120px; height: 100px; margin-right: 5px"></image-link>

            </td>
            <td>
                <label asp-for="newsItem.CreatedAtUtc"></label>
            </td>
            <td>
                <form asp-action="Delete" method="post">
                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" style="float: inherit"/>
                    </div>
                </form>
            </td>
        </tr>

    </table>

    <div class="clear"></div>

    <span style="font-size: 13px;">
        <a asp-controller="NewsItems" asp-action="List" style="color: #EB7F1A"><<< Back to List</a>
    </span>


</div>
