@{

    Layout = null;
}
<hr>
<h3 style="margin: 10px, 0px, 0px, 0px; text-decoration: underline">You can add users using register link</h3>

@if (ViewData["message"] != null && ViewData["message"].ToString().Contains("Successful"))
{
    <div class="alert alert-success">@ViewData["message"]</div>
}
else if(ViewData["message"] != null)
{
    <div class="alert alert-danger">@ViewData["message"]</div>
}

@Html.ValidationSummary()


@if (ViewBag.Users != null && ViewBag.Users.Length > 0)
{
    <div class="row">
        <div class="col-lg-6">
            <table class="table table-bordered table-condensed table-hover brd">
                <thead>
                    <tr>

                        <th><span style="font-weight: bold">Username</span></th>
                        <th><span style="font-weight: bold">Email</span></th>
                        <th><span style="font-weight: bold">Actions</span></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in ViewBag.Users)
                    {
                        <tr>

                            <td>@user.UserName</td>
                            <td>@user.Email</td>

                            <td style="text-align: center">
                                <span class="btn-create-new">
                                    @Html.ActionLink("Edit", "Edit", new { id = user.Id }, new { @class = "btn btn-primary btn-sm" + (User.IsInRole("Moderator") ? " disabled" : "")})
                                </span>
                                <span>
                                    @Html.ActionLink("Delete", "Delete", new { id = user.Id }, new { @class = "btn btn-danger btn-sm" + (User.IsInRole("Moderator") ? " disabled" : "") })
                                </span>
                            </td>



                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">No Users</div>
}